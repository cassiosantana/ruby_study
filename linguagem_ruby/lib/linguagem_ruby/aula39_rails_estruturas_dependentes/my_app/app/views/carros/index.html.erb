<style>
  table, th, td {
      border: 1px solid
  }
</style>
<p style="color: green"><%= notice %></p>

<h1>Todos os Carros</h1>

<div id="carros">
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Marca</th>
          <th>Ano</th>
          <th>#</th>
          <th>#</th>
          <th>#</th>
        </tr>
      </thead>

      <tbody>
        <% @carros.each do |carro| %>
        <tr>
          <td><%= carro.nome %></td>
          <td><%= carro.marca.nome %></td>
          <td><%= carro.ano %></td>
          <td><%= link_to "Show this carro", carro %></td>
          <td><%= link_to "Edit this carro", edit_carro_path(carro) %></td>
          <td><%= button_to "Destroy this carro", carro, method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>

